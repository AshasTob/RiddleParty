@page
@model LoginModel
@{
    var hasError = ViewBag.HasError as bool? ?? false;
}
<!-- Hey man, its not that difficult - just write password -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Windows XP</title>
    <link rel="stylesheet" href="../css/login.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <form method="post" asp-controller="Lobyco" asp-action="Validate">
    <header></header>
    <main>
        <div class="img">
            <img src="../img/logo (1).png" alt="Logo do Windows XP" />
            <h1>To begin, click your user name</h1>
        </div>
        <div class="line"></div>
        <div class="users">
            <section class="admin">
                <div class="iconA"></div>
                <div class="user">
                    <h3>Admin</h3>
                    <p>Type your password</p>
                    <div class="input">
                        
                            <input type="password" id="id" name="password" class="@(hasError ? "error" : "")">
                            <button class="green"> <img src="../img/Vector (1).png" alt=""> </button>
                    </div>
                </div>
            </section>
            <section class="crystal">
                <div class="iconB"></div>
                <div class="user">
                    <p>Anders M</p>
                </div>
            </section>
        </div>
    </main>
    <footer>
        <div class="btn">
            <button> <img src="../img/Group 2.png" alt=""> </button>
            <p>Turn off computer</p>
        </div>
        <div class="informations">
            <p>After you log on, you can add or change accounts</p>
            <p>Just go to your Control Panel and click User Accounts</p>
        </div>
    </footer>
    </form>
</body>
</html>