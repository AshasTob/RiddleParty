<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hacking</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: #f0f0f0;
        }

        #popup {
            position: absolute;
            width: 300px;
            height: 150px;
            background-color: #fff;
            border: 2px solid #000;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            transition: left 0.2s, top 0.2s;
            font-family: Arial, sans-serif;
        }

        #popup-header {
            width: 100%;
            background-color: #0078d7;
            color: white;
            padding: 5px;
            font-size: 16px;
            text-align: left;
        }

        #popup-content {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 10px;
        }

        #popup button {
            margin-top: 10px;
            padding: 5px 10px;
            font-size: 14px;
            cursor: pointer;
        }

        .hidden {
            display:none;
        }
    </style>
</head>
<body>
    <div class="hidden" id="live-reaction">
        <img src="../img/WTF.png">
    </div>
    <div id="popup">
        <div id="popup-header">Warning</div>
        <div id="popup-content">
            <p>are you capable to...</p>
            <button onclick="OnClick()" id="hackButton">PROCEED HACKING!?</button>
        </div>
    </div>

    <script>
        const popup = document.getElementById('popup');
        const button = document.getElementById('hackButton');
        const soren = document.getElementById('live-reaction');

        function getRandomPosition(max) {
            return Math.floor(Math.random() * max);
        }

        popup.addEventListener('mouseover', () => {
            soren.classList.remove("hidden");
            const maxX = window.innerWidth - popup.clientWidth;
            const maxY = window.innerHeight - popup.clientHeight;

            let newX = getRandomPosition(maxX);
            let newY = getRandomPosition(maxY);

            popup.style.left = `${newX}px`;
            popup.style.top = `${newY}px`;
        });

        function OnClick() {
            var xhttp = new XMLHttpRequest();
            xhttp.open("POST", "/lobyco/button-was-clicked-lol", true);
            xhttp.send();
            // TODO: guys can u just maybe finish it for me? im to lazy to do it, so it is a part of a puzzle (or am I) ?
        };

        popup.style.left = `${(window.innerWidth - popup.clientWidth) / 2}px`;
        popup.style.top = `${(window.innerHeight - popup.clientHeight) / 2}px`;

        document.addEventListener('keydown', function (event) {
            if (event.key === 'Tab' || event.keyCode === 9) {
                event.preventDefault();
                alert('Tabbing is not hacking');
            }
        });
    </script>
</body>
</html>
